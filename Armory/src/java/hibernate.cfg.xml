<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3307/game?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">usbw</property>
    <mapping resource="DAL/Attribute.hbm.xml"/>
    <mapping resource="DAL/Charclass.hbm.xml"/>
    <mapping resource="DAL/Account.hbm.xml"/>
    <mapping resource="DAL/Slot.hbm.xml"/>
    <mapping resource="DAL/Character.hbm.xml"/>
    <mapping resource="DAL/Item.hbm.xml"/>
    <mapping resource="DAL/Race.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
